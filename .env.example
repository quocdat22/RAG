# Environment Configuration for RAG System

# ============================================================================
# LLM Configuration
# ============================================================================
OPENAI_API_KEY=your_github_models_api_key_here
OPENAI_BASE_URL=https://models.inference.ai.azure.com
MODEL_NAME=gpt-4o
FALLBACK_MODEL_NAME=gpt-4o-mini
EMBEDDING_MODEL=text-embedding-3-small

# ============================================================================
# Cohere Configuration (for reranking)
# ============================================================================
COHERE_API_KEY=your_cohere_api_key_here
RERANK_MODEL=rerank-v3.5

# ============================================================================
# Vector Database Configuration
# ============================================================================
CHROMA_PERSIST_DIR=./data/vector_db
CHROMA_COLLECTION_NAME=documents

# ============================================================================
# Chunking Configuration
# ============================================================================
CHUNK_SIZE=512
CHUNK_OVERLAP=50
MIN_CHUNK_SIZE=100

# ============================================================================
# LlamaParse Configuration (Advanced PDF Processing)
# ============================================================================
# Get your API key from: https://cloud.llamaindex.ai
LLAMA_CLOUD_API_KEY=your_llama_cloud_api_key_here
ENABLE_LLAMAPARSE=true
LLAMAPARSE_RESULT_TYPE=markdown

# ============================================================================
# Retrieval Configuration
# ============================================================================
RETRIEVAL_TOP_K=5
SIMILARITY_THRESHOLD=0.7
ENABLE_RERANKING=true
RERANK_TOP_N=3

# ============================================================================
# Cache Configuration (Optional - Set ENABLE_CACHE=false to disable)
# ============================================================================
REDIS_URL=redis://localhost:6379
ENABLE_CACHE=false
CACHE_TTL_SECONDS=3600

# ============================================================================
# Application Configuration
# ============================================================================
LOG_LEVEL=INFO
DATA_DIR=./data/documents
MAX_FILE_SIZE_MB=50
ALLOWED_EXTENSIONS=pdf,txt,csv,docx,xlsx

# ============================================================================
# Performance & Limits
# ============================================================================
MAX_TOKENS=4096
TEMPERATURE=0.1
REQUEST_TIMEOUT=30
MAX_RETRIES=3

# ============================================================================
# UI Configuration
# ============================================================================
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=localhost
